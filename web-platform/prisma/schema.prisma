generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int              @id @default(autoincrement())
  username        String           @unique
  password        String
  interests       Tag[]            @relation("UserInterests")
  memberships     Membership[]
  interactions    Interaction[]
  recommendations Recommendation[]
}

model Community {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  description     String           @default("")
  avatarUrl       String?
  tags            Tag[]            @relation("CommunityTags")
  members         Membership[]
  interactions    Interaction[]
  recommendations Recommendation[]
}

model Tag {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  users       User[]      @relation("UserInterests")
  communities Community[] @relation("CommunityTags")
}

model Membership {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  community   Community @relation(fields: [communityId], references: [id])
  communityId Int
  joinedAt    DateTime  @default(now())

  @@unique([userId, communityId])
}

model Interaction {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  community   Community @relation(fields: [communityId], references: [id])
  communityId Int
  type        String    // "view", "click", "rsvp", "join"
  weight      Float     // 0.5,   1.0,    2.0,    3.0
  createdAt   DateTime  @default(now())
}

model Recommendation {
  id           Int       @id @default(autoincrement())
  userId       Int
  communityId  Int
  score        Float
  contentScore Float
  collabScore  Float
  computedAt   DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id])
  community    Community @relation(fields: [communityId], references: [id])

  @@unique([userId, communityId])
}